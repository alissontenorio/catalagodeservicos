<div class="row mb-3 text-secondary">
    <h1> <%= @servico.titulo %> </h2>
</div>


<%= form_with url: solicitar_servico_path, local: true , method: :put do |form| %>
    <div class="form-group">
        <label for="Departamento">Departamento</label>
        <%= form.text_field 'Departamento', placeholder: 'Nome do departamento', class: 'form-control col-md-4'%>
    </div>  
    <div class="form-group">
        <label for="Setor">Setor</label>
        <%= form.text_field 'Setor', placeholder: 'Nome do setor', class: 'form-control col-md-4'%>
    </div>
    <%= form.submit class: 'btn btn-success text-center' %>
<% end %>

<br>